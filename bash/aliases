# Alias for various commands
alias ..='cd ..'
alias ...='cd ../..'
alias _='cd -'
alias apm='sudo hdparm -I /dev/sda | grep --color=never -i advanced'
alias aurcheck='aurcheck -o'
alias cddl='[[ -d ~/downloads ]] && cd ~/downloads'
alias cdtmp='cd /tmp/'
alias cfu='ruby -S update.rb || pacman -Qu'
alias chmod='chmod -v'
alias cp='cp -v'
alias curl_json_get='curl -v -H "Accept: application/json" -H "Content-type: application/json" -X GET -d'
alias curl_json_post='curl -v -H "Accept: application/json" -H "Content-type: application/json" -X POST -d'
alias curl_json_put='curl -v -H "Accept: application/json" -H "Content-type: application/json" -X PUT -d'
alias ls='ls -h --group-directories-first --color=always'
alias ll='ls -l'
alias lr='ls -R'
alias lt='ls -lt'
alias la='ls -A'
alias lal='ls -Al'
alias lar='ls -AR'
alias lat='ls -Alt'
alias ln='ln -v'
alias editrc='sudo vim /etc/rc.conf'
alias fswp='find . -name ".*.swp"'
#alias fixperms='find . -type f -exec chmod 644 -v {} \;'
alias fixwallpaper='imlibsetroot -x e -s f $HOME/.background.png; killall conky; iconky.sh'
alias grep='grep --color=auto'
alias hddstatus='sudo smartctl -a /dev/sda | egrep "Cycle|Power|Temp"'
alias journalio='iotop -otqqq | grep jbd2'
alias mkdir='mkdir -v'
alias mv='mv -v'
alias myip='curl ifconfig.me'
alias orphans='pacman -Qqdt'
alias perm='stat --format="%a %A"'
alias pkginfo='pacman -Sii'
alias pkglist='pacman -Ql'
alias pkglocal='pacman -Qii'
alias pkgowner='pacman -Qo'
alias pkgsearch='pacman -Ss'
alias pintos='pintos --qemu --' # for SO course
#alias titus='dosbox ~/games/titus-the-fox/RUNME.BAT &'
alias rm='rm -v'
alias rmsvn='find . \( -path "*svn*" \) -type f -exec rm -iv {} \;'
alias thermal='acpi -V'
alias todo='vim ~/.todolist && exit'
alias topten="history | tr '\011' ' ' | tr -s ' ' | cut -d ' ' -f 3 | sort | uniq -c | sort -nbr | head -n 10"
alias sshload="eval `ssh-agent`"
alias sxivclr='sxiv -c && find ~/.sxiv/ -type d -empty -delete' # clear sxiv cache
alias uncomment="sed -i 's/^#//g'"
alias untar="tar -zxvf"
alias vimm='vim .'
alias voicerecord='ffmpeg -f alsa -ac 2 -i hw:0,0 -acodec libmp3lame -ab 192k voicerecord.mp3'
#alias wallpaper='imlibsetroot --store -s'
alias xinfo='xset q'

# ex: ts=4 sw=4 et filetype=sh
