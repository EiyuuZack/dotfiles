!! For optimal settings:
!!  remove all Window Titles (e.g., NLIMCSD)
!!  reduce Window Title font size to 2


!! dominant color (default color was #ff0000)

window.active.border.color:     #e11d33
window.active.title.bg.color:   #333333
menu.items.active.bg.color:     #e11d33
osd.hilight.bg.color:           #000000


!! window settings 

border.width: 1

window.inactive.border.color:   #333333
window.inactive.title.bg.color: #333333

window.active.title.bg:         solid flat
window.inactive.title.bg:       solid flat

!! inactive title color defaults to #ffffff so no need to specify
window.active.label.text.color: #ffffff

padding.width:                  0
padding.height:                 0
window.client.padding.width:    0
window.client.padding.height:   0
window.handle.width:            0


!! menus

menu.overlap.x:                 0
menu.border.width:              0
menu.border.color:              #000000
menu.title.bg:                  solid flat
menu.title.bg.color:            #1a1a1a
menu.title.text.color:          #ffffff
menu.title.text.justify:        left

menu.items.bg:                  solid flat
menu.items.bg.color:            #1a1a1a
menu.items.text.color:          #888888

menu.items.disabled.text.color: #666666
menu.bullet.image.color:        #000000
menu.bullet.selected.image.color: #ffffff

menu.items.active.bg:           solid flat 
menu.items.active.text.color:   #ffffff


!! prompt buttons
window.active.button.unpressed.image.color: #777777
window.active.button.pressed.image.color:   #e11d33
window.active.button.hover.image.color:     #ffffff
window.active.button.disabled.image.color:   #000000

window.inactive.button.unpressed.image.color:   #777777
!! inactive pressed property redundant as window becomes active
